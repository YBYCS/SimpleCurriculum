<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingHorizontal="10dp"
                android:text="基本设置"
                android:textSize="18sp"
                android:gravity="bottom"
                />
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/st_BeginTime"
                android:background="@drawable/click_background"
                android:paddingHorizontal="10dp"
                android:layout_height="60dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="开学时间"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="时间 >"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/st_SumWeek"
                android:background="@drawable/click_background"
                android:paddingHorizontal="10dp"
                android:layout_height="60dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="本学期总周数"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="周数 >"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/st_ShowWeekend"
                android:layout_height="60dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/click_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="是否展示周末"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>

                <Switch
                    android:id="@+id/sw_isShowWeekend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/st_NumberOfCourse"
                android:layout_height="60dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/click_background"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="课表节数设置"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=">"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/st_TimeSetting"
                android:layout_height="60dp"

                android:paddingHorizontal="10dp"
                android:background="@drawable/click_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="课表时间设置"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" >"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>